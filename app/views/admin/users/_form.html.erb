<% if @user.errors.any? %>
  <div id = "error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this 
      <%= @user.name %> from being saved:</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: [:admin, user], local: true) do |form| %>
  <div class = "container">
    <%= form.label :name, '名前' %>
    <%= form.text_field :name, class: "form-control" %>
  </div>
  <div class = "container">
    <%= form.label :email, 'メールアドレス' %>
    <%= form.email_field :email, class: "form-control" %>
  </div>
  <div class = "container">
    <%= form.label :admin, class: "form-check-label" do %>
      <%= form.check_box :admin, class: "form-check-input" %>
       管理者権限
    <% end %>
  <div class = "container">
    <%= form.label :password, 'パスワード' %>
    <%= form.password_field :password, class: "form-control" %>
  </div>
  <div class = "container">
    <%= form.label :password_confirmation, 'パスワード確認' %>
    <%= form.password_field :password_confirmation, class: "form-control" %>
  </div>

 <br>
    <%= form.submit "登録する", class: "btn btn-success" %>
<% end %>